#!/usr/bin/env bash
#
# postinstall script

set -o nounset

OS=`uname -s`

if [[ "$OS" == "Darwin" ]]; then
    # link 'subl' to sublime text
    if [[ ! -h $HOME/bin/subl ]]; then
        SAVEIFS=$IFS
        IFS=$(echo -en "\n\b")
        ln -s "/Applications/Sublime Text.app/Contents/SharedSupport/bin/subl" "$HOME/bin/subl"
        IFS=$SAVEIFS
    fi
fi
